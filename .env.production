APP_NAME=Laravel
APP_ENV=production
APP_KEY=your-laravel-key   # Keep your existing key
APP_DEBUG=false
APP_URL=http://your-production-domain.com

CRM_URL=your-production-domain.com
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12
CACHE_DRIVER=redis

LOG_CHANNEL=daily
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# ✅ Database (from your screenshot)
DB_CONNECTION=mysql
DB_HOST=ssmultiversecrm_ssmultiversecrm
DB_PORT=3306
DB_DATABASE=db
DB_USERNAME=db
DB_PASSWORD=db

# ✅ Session & Cache (use redis if available)
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=your-production-domain.com

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=public
QUEUE_CONNECTION=sync

CACHE_STORE=redis
CACHE_PREFIX=sscrm_

# ✅ Redis settings (use EasyPanel internal service name or IP)
REDIS_CLIENT=phpredis
REDIS_HOST=ssmultiversecrm_redis
REDIS_PASSWORD=redis
REDIS_PORT=6379
REDIS_USERNAME=default

# ✅ Mail setup (configure later if needed)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ✅ Vite frontend reference
VITE_APP_NAME="${APP_NAME}"